@model List<DB_Pharmacy.Models.Employeemodel>
@{
    ViewBag.Title = "Company Employee";
}

@helper Button(string type, string value)
{

    <input type="@type" value="@value" class="btn btn-theme">

}
<h2>Company Employee</h2>

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
            <table class="table table-striped table-advance table-hover">
                <h4><i class="fa fa-angle-right"></i>Employees Table</h4>
                <hr>
                <thead>
                    <tr>
                        <th><i>#</i>EID</th>
                        <th>Image</th>
                        <th><i class="fa fa-user"></i>Full Name</th>
                        <th><i class="fa fa-bookmark"></i>Address</th>
                        <th><i class="fa fa-bookmark"></i>Birthday</th>
                        <th><i class="fa fa-bookmark"></i>Gender</th>
                        <th><i class="fa fa-bookmark"></i>Status</th>
                        <th><i class="fa fa-bookmark"></i>Phone No</th>
                        <th><i class="fa fa-bookmark"></i>Nationaltiy</th>
                        <th><i class="fa fa-bookmark"></i>Age</th>
                        @*<th><i class=" fa fa-edit"></i> Status</th>*@
                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.EID</td>
                            <td><img src="@Url.Content(emp.Imagepath)" title="@emp.FirstName" width="100" height="100" /></td>
                            <td>
                                <span class="hidden-phone">@emp.FirstName</span>
                                <span class="hidden-phone">@emp.LastName</span>
                            </td>
                            <td class="hidden-phone">@emp.eaddress</td>
                            <td class="hidden-phone">@emp.Birthday</td>
                            <td class="hidden-phone">@emp.Gender</td>
                            <td class="hidden-phone">@emp.Status</td>
                            <td class="hidden-phone">@emp.Contactno</td>
                            <td class="hidden-phone">@emp.Nationality</td>
                            <td class="hidden-phone">@emp.Age</td>
                            @*<td>
                                <a href="@Url.Action("Updateemp", "Employee", new { EID = @emp.EID })"><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                           </td>*@
                        </tr>
                    }
                    
                </tbody>
            </table>
            
        </div>
        <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
    
</div>
<br />
<br />
<br />
<div class="col-md-12">
    <div class="col-lg-offset-10 col-sm-2">
        <a href="@Url.Action("Addemp","Employee")">@Button("Submit", "New Employee")</a>
    </div>
</div>

@if (TempData["message"] != null)
{
<script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
        }

</script>
}

