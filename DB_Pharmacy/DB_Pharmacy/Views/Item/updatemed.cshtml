@model DB_Pharmacy.Models.Itemmodel
@{
    ViewBag.Title = "Update Item";
    

}

<h2>Update Item</h2>

@helper Button(string type, string value)
{

    <input type="@type" value="@value" class="btn btn-theme">

}



@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <div class="cmxform form-horizontal style-form">
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Item Code</label>
                        <div class="col-lg-10">
                            @Html.HiddenFor(x=> x.ItemID)
                            @Html.TextBoxFor(x => x.ItemCode, null, new { @Class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ItemCode, null, new { @Class = "errormessage", style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Item Name</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.ItemName, null, new { @Class = "form-control", id = "firstname", name = "firstname", type = "text" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Brand Name</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.ItemBrandName, null, new { @Class = "form-control", placeholder = "Panadol" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="username" class="control-label col-lg-2">Description</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.ItemDescription, null, new { @Class = "form-control", placeholder = "Panadol Tablet" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="password" class="control-label col-lg-2">Unit Price</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Unitprice, null, new { @Class = "form-control", placeholder = "100.0" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="confirm_password" class="control-label col-lg-2">Sell Price</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Sellprice, null, new { @Class = "form-control", placeholder = "102.0" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="email" class="control-label col-lg-2">Unit</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Unit, null, new { @Class = "form-control", placeholder = "01" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Quantity</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Quantity, null, new { @Class = "form-control", placeholder = "01" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2">Expire Date</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Expiredate, null, new { @Class = "form-control", type = "date" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-10 col-sm-2">
                            @Button("Submit", "Update")
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}


