@model DB_Pharmacy.Models.PatientModel
@{
    ViewBag.Title = "Edit Patient";
}

<h2>Edit Patient</h2>

@helper Button(string type, string value)
{

    <input type="@type" value="@value" class="btn btn-theme">

}


@using (Html.BeginForm(FormMethod.Post))
{
    <div class="row mt">
        <div class="col-lg-12">
            <div class="form-panel">
                <div class="cmxform form-horizontal style-form">
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Patient ID</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.PID, null, new { @Class = "form-control" })
                            @Html.ValidationMessageFor(x => x.PID, null, new { @Class = "errormessage", style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Patient Name</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.PName, null, new { @Class = "form-control" })
                            @Html.ValidationMessageFor(x => x.PName, null, new { @Class = "errormessage", style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Address</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Paddress, null, new { @Class = "form-control", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Paddress, null, new { @Class = "errormessage", style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label class="control-label col-lg-2">Disease</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(x => x.Diease, null, new { @Class = "form-control", placeholder = "" })
                            @Html.ValidationMessageFor(x => x.Diease, null, new { @Class = "errormessage", style = "color:red;" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-10 col-sm-2">
                            @Button("Submit", "Update")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
        }

    </script>
}


